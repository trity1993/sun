<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.trity.sun">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--联网-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SunApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ChooseAreaActivity">

        </activity>
        <activity android:name=".activities.sign.LoginActivity"></activity>
        <activity android:name=".activities.SettingActivity"
            android:label="@string/title_activity_setting">

        </activity>

        <service android:name=".service.WeatherForegroundService"
            android:process=":background"></service>
        <receiver android:name=".receiver.AlarmUpdateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="cc.trity.receiver.START_SERVICE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
